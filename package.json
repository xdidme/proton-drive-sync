{
  "name": "proton-drive-sync",
  "version": "0.2.2-beta.3",
  "description": "Sync local files to Proton Drive",
  "type": "module",
  "bin": {
    "proton-drive-sync": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc && cp -r src/db/migrations dist/db/ && mkdir -p dist/dashboard && cp src/dashboard/*.html dist/dashboard/ && cp -r src/dashboard/assets dist/dashboard/",
    "build:check": "tsc --noEmit",
    "build:bin": "bun build --compile --minify --sourcemap ./src/index.ts --outfile ./dist/proton-drive-sync",
    "build:bin:darwin-arm64": "bun build --compile --minify --target=bun-darwin-arm64 ./src/index.ts --outfile ./dist/proton-drive-sync-darwin-arm64",
    "build:bin:darwin-x64": "bun build --compile --minify --target=bun-darwin-x64 ./src/index.ts --outfile ./dist/proton-drive-sync-darwin-x64",
    "build:bin:linux-x64": "bun build --compile --minify --target=bun-linux-x64 ./src/index.ts --outfile ./dist/proton-drive-sync-linux-x64",
    "build:bin:windows-x64": "bun build --compile --minify --target=bun-windows-x64 ./src/index.ts --outfile ./dist/proton-drive-sync-windows-x64.exe",
    "prepare": "husky"
  },
  "keywords": [
    "proton",
    "drive",
    "sync"
  ],
  "author": "damianb-bitflipper",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/damianb-bitflipper/proton-drive-sync"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@inquirer/prompts": "^8.0.1",
    "@protontech/drive-sdk": "^0.7.0",
    "bcryptjs": "^3.0.3",
    "commander": "^14.0.2",
    "drizzle-orm": "^0.45.0",
    "hono": "^4.10.7",
    "keytar": "^7.9.0",
    "lucide-static": "^0.562.0",
    "openpgp": "^6.2.2",
    "p-retry": "^7.1.0",
    "winston": "^3.18.3",
    "xdg-basedir": "^5.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/cli": "^4.1.18",
    "@types/bun": "^1.3.5",
    "@types/node": "^24.10.1",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "prettier": "^3.7.3",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0"
  }
}
